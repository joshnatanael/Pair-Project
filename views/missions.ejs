<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MySoldier-Missions</title>
  <%- include('./partials/style.ejs') %>
</head>
<body>
  <%- include('./partials/nav-bar.ejs') %>
  <% if(errors){ %>
    <% errors.split(',').forEach(error=>{ %>
      <p style="color: red;"><%= error %></p>
    <% }) %>
  <% } %>
  <% missionsData.forEach(missionData=>{ %>
    <div class="mission card gap">
      <h1>Missions: <%= missionData.formattingName() %></h1>
      <h2>Location: <%= missionData.location %></h2>
      <p>Points: <%= missionData.point %></p>
      <a href="/missions/<%= missionData.id %>/add">Apply</a>
    </div>
  <% }) %>
</body>
</html>